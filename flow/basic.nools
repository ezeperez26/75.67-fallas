define Question {
    id : null,
    ans : null
}

// 1ra Pregunta
// Precipitacion pluvial ocurrida entre R3-R5.5

rule Q1A1 { // Menos de 50 mm
    when {
        q: Question (q.id == 0 && q.ans == 0);
    } then {
        emit('puntaje', 2);
    }
}

rule Q1A2 { // 50 mm o mas
    when {
        q: Question (q.id == 0 && q.ans == 1);
    } then {
        emit('puntaje', 4);
    }
}

